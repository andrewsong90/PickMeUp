<% if @pmu.car_sharing %>
    <div class="label label-orange">Car Sharing</div>
<% elsif @pmu.cab_sharing %>
    <div class="label label-green">Cab Sharing</div>
<% end %>

<h4>Congratulations! Your request has been accepted</h4>

<%= render "shared/pmu_confirmation" %>

<%= link_to "Cancel",
            remove_user_event_pmu_path(:event_id => @event.id, :id => @pmu.id, :user_id => current_user.id),
            :method => :delete, :class => "btn btn-warning btn-right" %>

<%= link_to "More Info",
            event_pmu_path(:event_id => @event.id, :id => @pmu.id), :class => "btn btn-info btn-right" %>
